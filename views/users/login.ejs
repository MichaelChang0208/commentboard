<div class="container">
  <div class="registerandlogin-card">
      <div class="form-base">
          <h3 class="form-title">登入會員</h3>
          <%- include('../partials/form_error_msg') %>
          <form action="/users/login" method="POST">
              <div class="form-group label-hide">
                  <label class="no-show" for="email"></label>
                  <input id="email" class="form-control" placeholder="Email" name="email" type="text" />
              </div>
              <div class="form-group label-hide">
                  <label class="no-show" for="password"></label>
                  <input id="password" class="form-control" placeholder="密碼" name="password" type="password"/>
              </div>
              <button type="submit" class="register-login-btn">登入</button>
          </form>
      </div>
      <a href="/users/register" class="register-login">還沒有會員，按此註冊</a>
  </div>
</div>